<layout>
  <adminhtml_catalog_product_edit>
    <update handle="jquery" />

    <reference name="head">
      <action method="addCss"><css>mventory/css/styles.css</css></action>

      <action method="addJs"><js>jquery/jquery-uitablefilter.js</js></action>
      <action method="addJs"><js>tm/adminhtml/categories.js</js></action>
    </reference>
  </adminhtml_catalog_product_edit>

  <adminhtml_catalog_product_set_edit>
    <update handle="jquery" />

    <reference name="head">
      <action method="addCss"><css>mventory/css/styles.css</css></action>

      <action method="addJs"><js>jquery/jquery-ui-custom-min.js</js></action>
      <action method="addJs"><js>mventory/matching.js</js></action>
      <action method="addJs"><js>jquery/jquery-uitablefilter.js</js></action>
      <action method="addJs"><js>tm/adminhtml/categories.js</js></action>
    </reference>

    <reference name="content">
      <block type="mventory_tm/matching" name="tm.rules" template="mventory_tm/matching.phtm">
        <block type="mventory_tm/matching_categories" name="tm.rules.categories" as="categories" template="mventory_tm/matching/categories.phtml" />
      </block>
    </reference>
  </adminhtml_catalog_product_set_edit>

  <adminhtml_customer_edit>
    <reference name="js">
      <block type="adminhtml/template" template="mventory_tm/customer/edit/js.phtml" name="mventory.customer.edit.js" as="mventory_customer_edit_js"></block>
    </reference>
  </adminhtml_customer_edit>
</layout>